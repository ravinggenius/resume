root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{rb,ru}]
indent_style = space
indent_size = 2

[*.erb]
indent_style = tab
indent_size = 4

[*.js]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
